<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="LaporanBarang" pageWidth="595" pageHeight="842" columnWidth="555">

    <!-- ============================= -->
    <!--           QUERY               -->
    <!-- ============================= -->
    <queryString><![CDATA[
        SELECT kode_barang, nama_barang, harga, stok FROM barang;
    ]]></queryString>

    <field name="kode_barang" class="java.lang.String"/>
    <field name="nama_barang" class="java.lang.String"/>
    <field name="harga" class="java.lang.Integer"/>
    <field name="stok" class="java.lang.Integer"/>

    <!-- ============================= -->
    <!--             TITLE             -->
    <!-- ============================= -->
    <title>
        <band height="60">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[LAPORAN DATA BARANG]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="45" width="555" height="1"/>
            </line>
        </band>
    </title>

    <!-- ============================= -->
    <!--       TABLE HEADER            -->
    <!-- ============================= -->
    <pageHeader>
        <band height="25">
            <!-- Kode -->
            <staticText>
                <reportElement x="0" y="0" width="100" height="25" backcolor="#E0E0E0" mode="Opaque"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Kode Barang]]></text>
            </staticText>

            <!-- Nama -->
            <staticText>
                <reportElement x="100" y="0" width="255" height="25" backcolor="#E0E0E0" mode="Opaque"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Nama Barang]]></text>
            </staticText>

            <!-- Harga -->
            <staticText>
                <reportElement x="355" y="0" width="100" height="25" backcolor="#E0E0E0" mode="Opaque"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Harga]]></text>
            </staticText>

            <!-- Stok -->
            <staticText>
                <reportElement x="455" y="0" width="100" height="25" backcolor="#E0E0E0" mode="Opaque"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Stok]]></text>
            </staticText>

        </band>
    </pageHeader>

    <!-- ============================= -->
    <!--           DETAIL              -->
    <!-- ============================= -->
    <detail>
        <band height="20">
            <!-- Kode -->
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{kode_barang}]]></textFieldExpression>
            </textField>

            <!-- Nama -->
            <textField>
                <reportElement x="100" y="0" width="255" height="20"/>
                <textElement textAlignment="Left"/>
                <textFieldExpression><![CDATA[$F{nama_barang}]]></textFieldExpression>
            </textField>

            <!-- Harga -->
            <textField pattern="###,###">
                <reportElement x="355" y="0" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{harga}]]></textFieldExpression>
            </textField>

            <!-- Stok -->
            <textField>
                <reportElement x="455" y="0" width="100" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{stok}]]></textFieldExpression>
            </textField>

            <!-- Garis bawah per baris -->
            <line>
                <reportElement x="0" y="19" width="555" height="1"/>
            </line>
        </band>
    </detail>

    <!-- ============================= -->
    <!--            FOOTER             -->
    <!-- ============================= -->
    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="5" width="555" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Dicetak pada: " + new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
